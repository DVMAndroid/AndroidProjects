<?xml version="1.0" encoding="utf-8"?>

    

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg5"
    >
      <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/logo_top" />
   
  
    
 <!-- This is for the line in middle -->
     <View
         
          android:layout_width="fill_parent"
         android:layout_height="1px"
         android:background="#303025"
         />
    <ScrollView 
         xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_weight="1"
      android:layout_height="wrap_content" 
      android:layout_width="fill_parent" 
      android:orientation="vertical" > 
      -<LinearLayout android:layout_height="fill_parent" 
      android:layout_width="fill_parent" 
      android:orientation="vertical"
      
       android:gravity="center_vertical">
     <TableLayout
         
         android:layout_width="fill_parent"
         android:layout_height="250dp" 
       
        >

          <TableRow 
             
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >
             <TextView 
                 android:textSize="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNO"/>
    
    <TextView
        android:textSize="15px" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ITEMS"/>
    
     <TextView 
         android:textSize="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        />
      <TextView 
          android:textSize="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        />
 </TableRow>    
 
          <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
         
         <TableRow 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
    
     <TextView 
        android:layout_width="45dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/sno"/>
             
    <TextView 
        android:layout_width="125dip"
        android:layout_height="wrap_content"
        android:id="@+id/items"/>
     <TextView 
         android:id="@+id/Quan"
         android:gravity="center"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
      
        />
     <TextView 
         android:id="@+id/price"
        android:layout_width="75dip"
        android:gravity="center"
        android:layout_height="wrap_content"
      
        />
 </TableRow>
    
</TableLayout>
</LinearLayout>
</ScrollView>


 <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
         
          >

          <Button
              android:id="@+id/order"
              android:layout_width="100px"
              android:layout_height="wrap_content"
              android:text="Order Now"
              android:textSize="15px" />
         

          <TextView
              android:id="@+id/txt5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="20dp"
              android:layout_toRightOf="@+id/order"
              android:gravity="center_vertical"
              android:text="Total : " />

          <TextView
              android:id="@+id/rate5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/order"
              android:layout_alignParentRight="true"
              android:layout_marginRight="38dp"
              android:gravity="center_vertical"
              android:text="Rs. 0/-" />

          
      </RelativeLayout>
     
<FrameLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_gravity="center"
          android:layout_weight="4"
          >
      <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/bottom"
            android:background="#340114" />
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"> 
         <TextView 
             android:id="@+id/detail1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="For More Information"/>
      <TextView
          android:id="@+id/detail2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tel : "
          android:layout_below="@id/detail1"
          />
      
      <TextView
          android:id="@+id/detail3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/detail1"
          android:layout_toRightOf="@id/detail2"
         
          android:text="@string/number1"/>
      <TextView
          android:id="@+id/detail4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/detail1"
          android:layout_toRightOf="@id/detail3"
          android:text=" / "/>
      <TextView
          android:id="@+id/detail5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/detail1"
          android:layout_toRightOf="@id/detail4"
          
          android:text="@string/number2"/>
      </RelativeLayout>
   </FrameLayout>
</LinearLayout>
 
