<?xml version="1.0" encoding="utf-8"?>

 <ScrollView 
         xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_weight="1"
      android:layout_height="wrap_content" 
      android:layout_width="fill_parent" 
      android:orientation="vertical"
     > 

<LinearLayout
	android:id="@+id/widget32"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bgg"
	xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
	android:id="@+id/widget34"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text=" Name : "
	android:textColor="#000000" />
<EditText
	android:id="@+id/widget35"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="Enter your name"
	android:textSize="18sp" />
<TextView
	android:id="@+id/widget36"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Mobile Number : "
	android:textColor="#000000" />
<EditText
	android:id="@+id/widget37"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="Enter your mobile number"
	android:textSize="18sp" 
	android:inputType="numberSigned" android:maxLength="10"/>
<TextView
	android:id="@+id/widget38"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Address:" 
	android:textColor="#000000"/>
<EditText
	android:id="@+id/widget39"
	android:layout_width="fill_parent"
	android:layout_height="117px"
	android:hint="Address for Delivery"
	android:textSize="18sp" />
<Button
	android:id="@+id/submit"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Submit" 
	android:textColor="#000000"/>
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
<FrameLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_gravity="center"
          android:layout_weight="4"
          >
      <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/bottom"
            android:background="#340114" />
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"> 
         <TextView 
             android:id="@+id/detail1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="For More Information"
             android:textColor="#00ffcc"/>
      <TextView
          android:id="@+id/detail2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tel : "
          android:layout_below="@id/detail1"
          />
      
      <TextView
          android:id="@+id/detail3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/detail1"
          android:layout_toRightOf="@id/detail2"
         
          android:text="@string/number1"/>
      <TextView
          android:id="@+id/detail4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/detail1"
          android:layout_toRightOf="@id/detail3"
          android:text=" / "/>
      <TextView
          android:id="@+id/detail5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/detail1"
          android:layout_toRightOf="@id/detail4"
          
          android:text="@string/number2"/>
      </RelativeLayout>
   </FrameLayout>
</LinearLayout>
</ScrollView>
